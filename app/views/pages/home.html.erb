

<div class="container">
    <div class="row">
        <div class="col form-container">
            <div class="row">
                <div class="col section">
                    <div class="section-heading-form">
                        <h1 class="text-primary">Welcome to the Portfolio API Manager</h1>
                        <small class="text-primary">Please Sign In</small>
                        <% if flash[:message] %>
                            <div class="alert alert-danger">
                                <%= flash[:message] %>
                            </div>
                        <% end %>                        
                    </div>
                    <hr>
                    <div class="section-content">
                        <div class="row form">
                            <%= form_with url: login_path do |f| %>
                                <div class="mb-3">
                                    <%= f.label :email, "Email", class: "form-label"  %>
                                    <%= f.text_field :email, class: "form-control"%>
                                </div>
                                <div class="mb-3">
                                    <%= f.label :password, "Password", class: "form-label"  %>
                                    <%= f.password_field :password, class: "form-control" %>
                                </div>
                                <hr>
                                <div class="submit-links">
                                    <%= f.submit "Login", class: "btn btn-outline-primary" %>
                                    <%= link_to  "Sign Up", new_portfolio_path, class: "link-primary" %>
                                </div>
                            <% end %>
                        </div>                    
                    </div>
                </div>    


            </div>
        </div>
    </div>
</div>