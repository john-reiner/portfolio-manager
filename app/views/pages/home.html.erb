

<div class="container">
    <div class="row">
        <div class="col form-container">
            <div class="form-tile" >
                <div class="row heading">
                    <div>
                        <h1>Welcome to the Portfolio API Manager</h1>
                        <small>Please sign in</small>
                    </div>
                </div>    
                <div class="row form">
                    <%= form_with url: login_path do |f| %>
                        <div class="mb-3">
                            <%= f.label :email, "Email", class: "form-label"  %>
                            <%= f.text_field :email, class: "form-control"%>
                        </div>
                        <div class="mb-3">
                            <%= f.label :password, "Password", class: "form-label"  %>
                            <%= f.password_field :password, class: "form-control" %>
                        </div>
                        <div class="submit-links">
                            <%= f.submit "Login", class: "btn btn-outline-success" %>
                            <%= link_to  "Sign Up", new_portfolio_path, class: "link-success" %>
                        </div>
                    <% end %>
                </div>
                <% if flash[:message] %>
                    <div class="alert alert-danger">
                        <%= flash[:message] %>
                    </div>
                    
                <% end %>
            </div>
        </div>
    </div>
</div>