<%= form_with(model: [portfolio, skill_category, skill], id: "#{dom_id(skill)}_form") do |form| %>
  <% if skill.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
        <% skill.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row">
    <div class="col-4">
      <%= form.text_field :name, placeholder: "Name", class: "form-control"  %>
    </div>
    <div class="col-4">
      <%= form.text_field :icon, placeholder: "Icon URL", class: "form-control"  %>
    </div>
    <div class="col-2">
      <%= form.submit "Submit", class: "btn btn-primary mb-2" %>
    </div>
    <% if skill.id %>
      <div class="col-2">
        <%= link_to  "Cancel", portfolio_skill_category_path(portfolio, skill_category), class: "btn btn-outline-danger" %>
      </div>
    <% end %>
    
  </div>
<% end %>
