
<div id="<%= "#{dom_id(skill)}_item" %>">
  <%= turbo_frame_tag dom_id(skill) do %> 
    <div class="row skill-row">
      <div class="col-4"><%= link_to skill.name, edit_portfolio_skill_category_skill_path(portfolio, skill_category, skill) %></div>

      <div class="col-4"><%= link_to skill.icon, edit_portfolio_skill_category_skill_path(portfolio, skill_category, skill) %></div>
      <div class="col-2"></div>
      <div class="col-2"><%= button_to "Delete", portfolio_skill_category_skill_path(portfolio, skill_category, skill), method: :delete, class: "btn btn-outline-danger" %></div>
    </div>
  <% end %>
</div>
